{
	"name": "AltAI",
	"version": "1.0",
	"manifest_version": 3,
	"description": "An AI-powered extension that enhances webpages with auto-generated alt text for images.",
	"permissions": ["scripting", "activeTab"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon16.png"
	}
}
